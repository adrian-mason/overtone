---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const SITE_URL = "https://overtone.dev";
const { title, description = "Adrian's Digital Garden â€” Performance Engineering, Classical Records, AI Thoughts" } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, SITE_URL).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    {/* Open Graph */}
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Overtone" />

    {/* Twitter */}
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    {/* RSS */}
    <link rel="alternate" type="application/rss+xml" title="Overtone RSS" href="/rss.xml" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Caveat:wght@700&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-[#fdfdfd] font-architects text-black antialiased">
    <slot />
  </body>
</html>
