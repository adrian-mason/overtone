---
interface Props {
  category: "performance" | "classical" | "ai" | "life";
  class?: string;
  style?: string;
}

const { category, class: className = "h-6 w-6", style } = Astro.props;
---

{
  category === "performance" && (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class={className}
      style={style}
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M22 12h-2.48a2 2 0 0 0-1.93 1.46l-2.35 8.36a.25.25 0 0 1-.48 0L9.24 2.18a.25.25 0 0 0-.48 0l-2.35 8.36A2 2 0 0 1 4.49 12H2" />
    </svg>
  )
}

{
  category === "classical" && (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class={className}
      style={style}
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <circle cx="12" cy="12" r="10" />
      <circle cx="12" cy="12" r="2" />
    </svg>
  )
}

{
  category === "ai" && (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class={className}
      style={style}
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z" />
      <path d="M9 13a4.5 4.5 0 0 0 3-4" />
      <path d="M6.003 5.125A3 3 0 0 0 6.401 6.5" />
      <path d="M3.477 10.896a4 4 0 0 1 .585-.396" />
      <path d="M6 18a4 4 0 0 1-1.967-.516" />
      <path d="M12 13h4" />
      <path d="M12 18h6a2 2 0 0 1 2 2v1" />
      <path d="M12 8h8" />
      <path d="M16 8V5a2 2 0 0 1 2-2" />
      <circle cx="16" cy="13" r=".5" />
      <circle cx="18" cy="3" r=".5" />
      <circle cx="20" cy="21" r=".5" />
      <circle cx="20" cy="8" r=".5" />
    </svg>
  )
}

{
  category === "life" && (
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class={className}
      style={style}
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <defs>
        <linearGradient id="life-icon-grad" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%"   stop-color="#dbeafe" />
          <stop offset="50%"  stop-color="#f3e8ff" />
          <stop offset="100%" stop-color="#fef3c7" />
        </linearGradient>
      </defs>
      <path stroke="url(#life-icon-grad)" d="M8 7h8" />
      <path stroke="url(#life-icon-grad)" d="M8 7L4 13h16L16 7" />
      <path stroke="url(#life-icon-grad)" d="M4 13l8 8 8-8" />
      <path stroke="url(#life-icon-grad)" d="M12 7v6" />
      <path stroke="url(#life-icon-grad)" d="M12 1v2.5" />
      <path stroke="url(#life-icon-grad)" d="M5 1.5l1.5 1.5" />
      <path stroke="url(#life-icon-grad)" d="M19 1.5l-1.5 1.5" />
    </svg>
  )
}
